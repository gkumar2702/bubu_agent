# Bubu Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# Core Settings
ENABLED=true
GF_NAME=YourGirlfriendName
GF_WHATSAPP_NUMBER=+1234567890  # E.164 format
SENDER_WHATSAPP_NUMBER=+1234567890  # E.164 format

# Hugging Face Configuration
HF_API_KEY=your_huggingface_api_key_here
HF_MODEL_ID=Qwen/Qwen2.5-7B-Instruct  # or any other suitable model

# WhatsApp Provider Configuration
WHATSAPP_PROVIDER=twilio  # Options: twilio, meta

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890  # Your Twilio WhatsApp number

# Meta WhatsApp Cloud API Configuration (if using Meta)
META_ACCESS_TOKEN=your_meta_access_token
META_PHONE_NUMBER_ID=your_phone_number_id

# Timezone and Scheduling
TIMEZONE=Asia/Kolkata  # Default timezone for scheduling
DAILY_FLIRTY_TONE=playful  # Options: playful, romantic, witty

# API Security
API_BEARER_TOKEN=your_secure_bearer_token_here  # For /send-now endpoint

# Optional: Skip Dates (YYYY-MM-DD format, comma-separated)
# SKIP_DATES=2024-01-01,2024-12-25

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
